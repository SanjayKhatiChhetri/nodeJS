		form(action="/addCustomer", method="post")
			div.mb-3
				label.form-label.fw-medium(for="firstName") First Name:
				input.form-control(type="text" id="firstName" name="firstName" placeholder="James")
			div.mb-3
				label.form-label.fw-medium(for="lastName") Last Name:
				input.form-control(type="text" id="lastName" name="lastName" placeholder="Cameron")
